<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgrnd_layout_color">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tlbAddSalesOrder"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:elevation="@dimen/toolbarElevation"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAddOrdr"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/list_item_title">

        <ImageView
            android:id="@+id/ivAddOrdrPuntero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/plus_circle"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/ORDR_QTY_ARTICULOS"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvAddOrdrQtyItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginRight="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="1dp"
        android:background="@color/list_item_title">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/database"
            android:layout_marginLeft="8dp"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/ORDR_IMPORTE_TOTAL"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tvAddOrdrTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="20sp"
            android:layout_marginRight="8dp"/>

    </LinearLayout>

</LinearLayout>